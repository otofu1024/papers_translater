#!/usr/bin/env zsh
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "$0")/.." && pwd)"
cd "$ROOT_DIR/frontend"

if [[ ! -d node_modules ]]; then
  echo "[ui] node_modules not found. Run: cd frontend && npm install" >&2
fi

exec npm run dev -- \
  --host "${UI_HOST:-127.0.0.1}" \
  --port "${UI_PORT:-5173}"

